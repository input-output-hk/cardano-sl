                     , aeson
                     , aeson-options
                     , array
                     , base
                     , bytestring
                     , cardano-sl-binary
                     , cardano-sl-core
                     , cardano-sl-crypto
                     , cardano-sl-util
                     , conduit
                     , containers
                     , contravariant
                     , cryptonite
                     , data-default
                     , deepseq
                     , dlist
                     , ekg-core
                     , ether
                     , exceptions
                     , fmt >= 0.4
                     , formatting
                     , free
                     , hashable
                     , lens
                     , lrucache
                     , memory
                     , mtl
                     , mmorph
                     , mono-traversable
