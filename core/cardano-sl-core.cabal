                       -- Update
                       Pos.Core.Update.ApplicationName
                       Pos.Core.Update.BlockVersion
                       Pos.Core.Update.BlockVersionData
                       Pos.Core.Update.BlockVersionModifier
                       Pos.Core.Update.Data
