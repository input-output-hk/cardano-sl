                     , aeson
                     , array
                     , base
                     , bytestring
                     , cardano-sl-core
                     , cardano-sl-db
                     , cardano-sl-infra
                     , cardano-sl-lrc
                     , cardano-sl-ssc
                     , containers
                     , cryptonite
                     , data-default
                     , directory
                     , ether
                     , file-embed
                     , filepath
                     , formatting
                     , generic-arbitrary
                     , hashable
                     , lens
                     , log-warper
                     , mmorph
                     , mono-traversable
                     , mtl
                     , node-sketch
                     , random
                     , reflection
                     , rocksdb-haskell >= 1.0.0
                     , serokell-util
                     , stm
                     , tagged
                     , template-haskell
                     , text
                     , text-format
                     , time-units
                     , transformers
                     , universum
                     , unordered-containers

