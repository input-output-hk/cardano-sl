name:                cardano-sl-infra
version:             0.5.1
synopsis:            Cardano SL - infrastructural
description:         Cardano SL - infrastructural
license:             MIT
license-file:        LICENSE
author:              Serokell
maintainer:          hi@serokell.io
copyright:           2016 IOHK
category:            Currency
build-type:          Simple
cabal-version:       >=1.10

library
  exposed-modules:
                        -- Reporting
                        Pos.Reporting
                        Pos.Reporting.MemState
                        Pos.Reporting.Exceptions
                        Pos.Reporting.Methods

                        -- Slotting
                        Pos.Slotting
                        Pos.Slotting.Constants
                        Pos.Slotting.MemState
                        Pos.Slotting.MemState.Class
                        Pos.Slotting.MemState.Holder
                        Pos.Slotting.Types
                        Pos.Slotting.Class
                        Pos.Slotting.Error
                        Pos.Slotting.Ntp
                        Pos.Slotting.Util

                        Pos.Discovery
                        Pos.Discovery.Broadcast
                        Pos.Discovery.Class
                        Pos.Discovery.Holders

                        -- Pos.DHT
                        Pos.DHT
                        Pos.DHT.Constants
                        Pos.DHT.Model
                        Pos.DHT.Model.Types
                        Pos.DHT.Real
                        Pos.DHT.Real.Real
                        Pos.DHT.Real.Types
                        Pos.DHT.Real.Param
                        Pos.DHT.Real.CLI
                        Pos.DHT.Workers

                        -- Pos.Communication
                        Pos.Communication.Constants
                        Pos.Communication.Types.Protocol
                        Pos.Communication.Types.State
                        Pos.Communication.Types.Relay
                        Pos.Communication.BiP
                        Pos.Communication.Limits.Types
                        Pos.Communication.Limits.Instances
                        Pos.Communication.Listener
                        Pos.Communication.MessagePart
                        Pos.Communication.PeerState
                        Pos.Communication.Protocol
                        Pos.Communication.Specs
                        Pos.Communication.Relay
                        Pos.Communication.Relay.Class
                        Pos.Communication.Relay.Logic
                        Pos.Communication.Relay.Types
                        Pos.Communication.Relay.Util
                        Pos.Communication.Util

                        -- Recovery
                        Pos.Recovery.Info

                        -- Pos.Shutdown
                        Pos.Shutdown
                        Pos.Shutdown.Class
                        Pos.Shutdown.Logic
                        Pos.Shutdown.Types

                        -- Pos.Binary
                        Pos.Binary.Infra
                        Pos.Binary.Infra.DHTModel
                        Pos.Binary.Infra.Slotting
                        Pos.Binary.Infra.Communication
                        Pos.Binary.Infra.Relay

                        -- Pos.Util
                        Pos.Util.LogSafe
                        Pos.Util.TimeLimit
                        Pos.Util.TimeWarp

  other-modules:        Paths_cardano_sl_infra
                        Pos.Infra.Constants

  build-depends:        aeson
                      , base
                      , parsec
                      , base64-bytestring
                      , binary
                      , bytestring
                      , cardano-sl-core
                      , cardano-sl-db
                      , cardano-report-server
                      , containers
                      , data-default
                      , directory
                      , ether >= 0.5
                      , exceptions
                      , filepath
                      , formatting
                      , hashable
                      , kademlia
                      , lens
                      , list-t
                      , log-warper >= 1.0.3
                      , monad-control
                      , mtl
                      , network-info
                      , network-transport-tcp
                      , node-sketch
                      , optparse-simple
                      , reflection
                      , serokell-util >= 0.1.3.4
                      , stm
                      , stm-containers
                      , tagged
                      , text
                      , temporary
                      , template-haskell
                      , text-format
                      , time
                      , time-units
                      , transformers
                      , transformers-base
                      , transformers-lift
                      , mmorph
                      , universum
                      , unordered-containers
                      , wreq

  default-language:    Haskell2010

  default-extensions:  DeriveDataTypeable
                       DeriveGeneric
                       GeneralizedNewtypeDeriving
                       StandaloneDeriving
                       FlexibleContexts
                       FlexibleInstances
                       MultiParamTypeClasses
                       FunctionalDependencies
                       DefaultSignatures
                       NoImplicitPrelude
                       OverloadedStrings
                       RecordWildCards
                       TypeApplications
                       TupleSections
                       ViewPatterns
                       LambdaCase
                       MultiWayIf
                       ConstraintKinds
                       UndecidableInstances
                       BangPatterns

  ghc-options:         -Wall
                       -fno-warn-orphans
                       -O2

  build-tools: cpphs >= 1.19
  ghc-options: -pgmP cpphs -optP --cpp
