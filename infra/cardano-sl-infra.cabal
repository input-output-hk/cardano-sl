name:                cardano-sl-infra
version:             0.5.1
synopsis:            Cardano SL - infrastructural
description:         Cardano SL - infrastructural
license:             MIT
license-file:        LICENSE
author:              Serokell
maintainer:          hi@serokell.io
copyright:           2016 IOHK
category:            Currency
build-type:          Simple
cabal-version:       >=1.10

library
  exposed-modules:
                        -- Arbitrary
                        Pos.Arbitrary.Slotting
                        Pos.Arbitrary.Infra

                        -- Reporting
                        Pos.Reporting
                        Pos.Reporting.MemState
                        Pos.Reporting.Exceptions
                        Pos.Reporting.Methods

                        -- Slotting
                        Pos.Slotting
                        Pos.Slotting.Class
                        Pos.Slotting.Constants
                        Pos.Slotting.Impl
                        Pos.Slotting.Impl.Ntp
                        Pos.Slotting.Impl.Simple
                        Pos.Slotting.Impl.Sum
                        Pos.Slotting.Impl.Util
                        Pos.Slotting.MemState
                        Pos.Slotting.MemState.Class
                        Pos.Slotting.MemState.Holder
                        Pos.Slotting.Types
                        Pos.Slotting.Error
                        Pos.Slotting.Util

                        -- Pos.DHT
                        Pos.DHT
                        Pos.DHT.Constants
                        Pos.DHT.Model
                        Pos.DHT.Model.Types
                        Pos.DHT.Real
                        Pos.DHT.Real.Real
                        Pos.DHT.Real.Types
                        Pos.DHT.Real.Param
                        Pos.DHT.Real.CLI
                        Pos.DHT.Workers

                        -- Pos.Communication
                        Pos.Communication.Constants
                        Pos.Communication.Types.Protocol
                        Pos.Communication.Types.Relay
                        Pos.Communication.BiP
                        Pos.Communication.Limits.Types
                        Pos.Communication.Limits.Instances
                        Pos.Communication.Listener
                        Pos.Communication.Protocol
                        Pos.Communication.Specs
                        Pos.Communication.Relay
                        Pos.Communication.Relay.Class
                        Pos.Communication.Relay.Logic
                        Pos.Communication.Relay.Types
                        Pos.Communication.Relay.Util
                        Pos.Communication.Util

                        -- Known peers
                        Pos.KnownPeers

                        -- Network topology
                        Pos.Network.DnsDomains
                        Pos.Network.Policy
                        Pos.Network.Types
                        Pos.Network.Yaml
                        Pos.Network.CLI

                        -- Recovery
                        Pos.Recovery.Info

                        -- Pos.Shutdown
                        Pos.Shutdown
                        Pos.Shutdown.Class
                        Pos.Shutdown.Logic
                        Pos.Shutdown.Types

                        -- Subscription
                        Pos.Subscription.Common
                        Pos.Subscription.Dns
                        Pos.Subscription.Dht

                        -- Pos.Binary
                        Pos.Binary.Infra
                        Pos.Binary.Infra.DHTModel
                        Pos.Binary.Infra.Slotting
                        Pos.Binary.Infra.Relay

                        -- Pos.Util
                        Pos.Util.LogSafe
                        Pos.Util.TimeLimit
                        Pos.Util.TimeWarp

  if os(windows)
    exposed-modules:    Pos.Network.Windows.DnsDomains

  other-modules:        Paths_cardano_sl_infra
                        Pos.Infra.Constants

  build-depends:        aeson
                      , base
                      , parsec
                      , base64-bytestring
                      , binary
                      , bytestring
                      , cardano-sl-core
                      , cardano-sl-db
                      , cardano-report-server >= 0.2.1
                      , containers
                      , data-default
                      , directory
                      , dns
                      , either
                      , ekg-core
                      , ether >= 0.5
                      , exceptions
                      , filepath
                      , formatting
                      , generic-arbitrary
                      , hashable
                      , http-client
                      , http-client-tls
                      , iproute
                      , kademlia
                      , lens
                      , list-t
                      , log-warper >= 1.0.3
                      , monad-control
                      , mtl
                      , network-info
                      , network-transport
                      , network-transport-tcp
                      , node-sketch
                      , optparse-applicative
                      , QuickCheck
                      , reflection
                      , serokell-util >= 0.1.3.4
                      , stm
                      , tagged
                      , text
                      , template-haskell
                      , text-format
                      , time
                      , time-units
                      , transformers
                      , transformers-base
                      , transformers-lift
                      , mmorph
                      , network-transport
                      , universum
                      , unordered-containers
                      , yaml

  if !os(windows)
    exposed-modules:   Pos.Util.SigHandler
    build-depends:     unix

  default-language:    Haskell2010

  if os(windows)
    C-sources:         Pos/Network/Windows/defaultdns.c

  default-extensions:  DeriveDataTypeable
                       DeriveGeneric
                       GeneralizedNewtypeDeriving
                       StandaloneDeriving
                       FlexibleContexts
                       FlexibleInstances
                       MultiParamTypeClasses
                       FunctionalDependencies
                       DefaultSignatures
                       NoImplicitPrelude
                       OverloadedStrings
                       RecordWildCards
                       TypeApplications
                       TupleSections
                       ViewPatterns
                       LambdaCase
                       MultiWayIf
                       ConstraintKinds
                       UndecidableInstances
                       BangPatterns
                       TemplateHaskell

  ghc-options:         -Wall
                       -fno-warn-orphans
                       -O2

  build-tools: cpphs >= 1.19
  ghc-options: -pgmP cpphs -optP --cpp
